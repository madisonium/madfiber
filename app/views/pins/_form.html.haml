- content_for :javascripts do
  :javascript
    $(function(){
      $('#add-madison').click(function(){
        $('#pin_address').val($('#pin_address').val() + ', Madison, WI');
        return false;
      });
    });
      
%dl
  %dt= form.label :name
  %dd= form.text_field :name
  %dt= form.label :address
  %dd
    = form.text_field :address
    = link_to 'add madison', '#', :id => 'add-madison'
  %dt= form.label :zip
  %dd= form.text_field :zip
  %dt= form.label :approved
  %dd= form.check_box :approved
  %dt= form.label :lat, 'Latitude'
  %dd= form.text_field :lat
  %dt= form.label :lng, 'Longitude'
  %dd= form.text_field :lng
